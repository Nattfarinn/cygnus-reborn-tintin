#FUNCTION {align_left}
{
	#LOCAL {WIDTH}		%1;
	#LOCAL {TEXT}		@normalize{%2};
	#LOCAL {PADDING}	%3;
	#LOCAL {LENGTH}		0;
	#LOCAL {PADDING_LENGTH}	0;

	#FORMAT {LENGTH} {%L} ${TEXT};
	#MATH {PADDING_LENGTH} {${LENGTH} + ${PADDING}};
	#FORMAT {TEXT} {%+${PADDING_LENGTH}s} ${TEXT};
	#FORMAT {TEXT} {%-${WIDTH}s} ${TEXT};

	#REPLACE {TEXT} { } \x20;
	#RETURN ${TEXT};
};

